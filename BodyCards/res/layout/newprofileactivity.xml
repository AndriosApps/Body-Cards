<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="#FFFFFF" 
	android:orientation="vertical">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="50dip" android:gravity="center|left" android:background="@drawable/actionbar">
        <TextView android:textSize="22dip" android:layout_height="wrap_content" android:id="@+id/textView8" android:text="Edit Profile" android:layout_width="wrap_content"></TextView>
    </LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="#E5E5E5" 
		android:orientation="horizontal"
		android:gravity="center"
		android:layout_weight="0">

		<TextView android:id="@+id/firstNameText" 
			android:text="First Name"
			android:layout_width="100dp" 
			android:layout_height="wrap_content"
			android:gravity="center" 
			android:textColor="#000"
			android:layout_weight="0" />

		<EditText android:id="@+id/newProfileUserFirstNameTXT" 
			android:hint="Enter First Name"
			android:background="#E5E5E5" 
			android:textColorHint="#AAA"
			android:textColor="#F00" 
			android:layout_width="0dp"
			android:layout_height="wrap_content" 
			android:inputType="textCapWords"
			android:selectAllOnFocus="true"
			android:layout_weight="1" />

	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="#FFFFFF" 
		android:orientation="horizontal"
		android:gravity="center"
		android:layout_weight="0">

		<TextView android:id="@+id/lastNameText" 
			android:text="Last Name"
			android:textColor="#000" 
			android:layout_width="100dp"
			android:layout_height="wrap_content" 
			android:gravity="center"
			android:layout_weight="0" />

		<EditText android:id="@+id/newProfileUserLastNameTXT" 
			android:hint="Enter Last Name"
			android:textColorHint="#AAA" 
			android:layout_width="0dp"
			android:textColor="#F00" 
			android:background="#FFFFFF"
			android:layout_height="wrap_content" 
			android:inputType="textCapWords"
			android:selectAllOnFocus="true"
			android:layout_weight="1" />

	</LinearLayout>

	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="#E5E5E5" 
		android:orientation="horizontal"
		android:gravity="center"
		android:layout_weight="0">
	
		<TextView android:id="@+id/newProfileBirthdayLBL" 
			android:text="Birthday"
			android:textColor="#000" 
			android:layout_width="100dp"
			android:layout_height="wrap_content" 
			android:gravity="center"
			android:layout_weight="0"></TextView>
		<LinearLayout android:id="@+id/linearLayout2" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="1" android:gravity="center">
			<TextView android:inputType="textCapWords" android:textColorHint="#AAA" android:hint="Set Birthday" android:layout_weight="1" android:layout_height="wrap_content"  android:textColor="#F00" android:layout_width="0dp" android:selectAllOnFocus="true" android:id="@+id/newProfileBirthdayTXT"></TextView>
		</LinearLayout>


			<Button android:id="@+id/newProfileUserBirthdayBTN"
				android:text=""
				android:layout_height="35dp" android:background="@drawable/calendar" android:layout_width="35dip" android:layout_weight="0"/>	
			
		
	</LinearLayout>


	
	<EditText android:id="@+id/newProfileUserAgeTXT" 
			android:layout_width="fill_parent"
			android:layout_height="0dp" 
			android:inputType="phone"
			android:hint="Age" 
			android:textColorHint="#AAA"
			android:layout_weight="0" 
			android:textColor="#F00" 
			android:background="#E5E5E5" 
			android:gravity="center"
			android:selectAllOnFocus="true"></EditText>



	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="#FFFFFF" 
		android:orientation="horizontal"
		android:gravity="center"
		android:layout_weight="0">

		<TextView android:id="@+id/genderText" 
			android:text="Gender"
			android:textColor="#000" 
			android:layout_width="100dp" 
			android:layout_height="wrap_content" 
			android:gravity="center"
			android:layout_weight="0"></TextView>

		<RadioGroup android:id="@+id/gender"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_weight="1">
			
			<RadioButton android:id="@+id/newProfileMaleRDO"
				android:text="Male"
				android:checked="True"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="15dp"
				android:textColor="#000"></RadioButton>
			
			<RadioButton android:id="@+id/newProfileFemaleRDO"
				android:text="Female"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="15dp"
				android:textColor="#000"></RadioButton>
		
		</RadioGroup>
			
	</LinearLayout>

	<!-- Fill the rest of screen and place buttons at the bottom of screen -->

	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:background="#FFFFFF" 
		android:orientation="vertical"
		android:gravity="bottom"
		android:layout_weight="1">

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent" 
			android:orientation="horizontal" android:gravity="center|left" android:layout_height="50dip" android:background="@drawable/actionbar">

			<Button android:id="@+id/newProfileResetBTN"
				android:text=""
				android:layout_height="50dp" android:background="@drawable/refresh" android:layout_weight="0" android:layout_width="50dip"/>
			<LinearLayout android:id="@+id/linearLayout3" android:layout_height="fill_parent" android:layout_width="wrap_content" android:layout_weight="1"></LinearLayout>

			<Button android:id="@+id/newProfileDoneBTN"
				android:text=""
				android:layout_weight="0" android:layout_width="50dip" android:background="@drawable/check" android:padding="5dip" android:layout_height="50dip"/>


		</LinearLayout>

	</LinearLayout>
</LinearLayout>
