<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:gravity="bottom"
	android:orientation="vertical"
	android:background="#000">

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="Help Window"
		android:textSize="18px"
		android:textColor="#000"
		android:background="#CCC"
		android:layout_weight="0" />
		
		<ScrollView 
			android:layout_weight="1"
			android:layout_height="0px"
			android:layout_width="fill_parent">

			<LinearLayout
				android:layout_height="fill_parent"
				android:layout_width="fill_parent"
				android:orientation="vertical"
				android:background="#000000">

				<TextView
					android:id="@+id/helpGenericActivityTitle" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:padding="10px"
					android:textSize="15px"
					android:textColor="#FFF"
					android:background="#333"
					android:textStyle="bold"
					android:layout_weight="0" />	

				<TextView 
					android:id="@+id/helpGenericActivityBody" 
					android:layout_width="fill_parent"
					android:layout_height="0px"
					android:background="#000"
					android:textColor="#FFF"
					android:layout_weight="1"
					android:text="Exercises completed in this mode will not be saved to your profile." />

			</LinearLayout>

		</ScrollView>


	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="55px" android:background="#555555"
		android:gravity="bottom" android:orientation="horizontal"
		android:layout_weight="0">

		<Button 
			android:id="@+id/helpGenericActivityBackBTN" 
			android:text="Back"
			android:layout_width="wrap_content" 
			android:layout_height="50px"
			android:layout_weight="1" />


	</LinearLayout>



</LinearLayout>
