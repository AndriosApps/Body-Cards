<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="#FFFFFF" android:gravity="top" android:orientation="vertical">

	<LinearLayout android:layout_weight="1"
		android:layout_width="fill_parent" android:layout_height="0dp"
		android:gravity="top" android:orientation="vertical">

		<LinearLayout android:id="@+id/profMain"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="horizontal" android:gravity="left">

			<ImageView android:id="@+id/dprofImg" android:layout_width="125dp"
				android:layout_height="125dp" android:src="@drawable/nopic" />

			<LinearLayout android:id="@+id/profMain"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:orientation="vertical" android:gravity="center">

				<LinearLayout android:id="@+id/profRight"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:orientation="vertical" android:gravity="left">

					<TextView android:id="@+id/dprofName"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:textSize="20dp" android:textColor="#000000"
						android:gravity="right" />

					<TextView android:id="@+id/dprofAge" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:textSize="12dp"
						android:textColor="#000000" android:gravity="right" />

					<TextView android:id="@+id/dprofWorkouts"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:textSize="12dp" android:textColor="#000000"
						android:gravity="right" />

					<TextView android:id="@+id/dprofCreation"
						android:layout_width="wrap_content" android:layout_height="30dp"
						android:gravity="bottom" android:textSize="10dp" />

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

		<TextView android:id="@+id/profWorkoutTitle"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:text="Workout Details" android:gravity="center"
			android:background="#CCCCCC" android:textColor="#000000" />

		<!-- Add layout for displaying workout details here -->

		<LinearLayout android:layout_weight="0"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			
			<TextView android:layout_weight="0"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Workout Date:"
				android:gravity="left"
				android:textColor="#000000" />
			
			<TextView android:layout_weight="1"
				android:id ="@+id/workoutDate"
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:gravity="left"
				android:textColor="#000000" />
			
		</LinearLayout>
		
		<LinearLayout android:layout_weight="0"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			
			<TextView android:layout_weight="0"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Workout Duration (Total):"
				android:gravity="left"
				android:textColor="#000000" />
			
			<TextView android:layout_weight="1"
				android:id ="@+id/workoutDuration"
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:gravity="left"
				android:textColor="#000000" />
			
		</LinearLayout>
		
		<LinearLayout android:layout_weight="0"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			
			<TextView android:layout_weight="0"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Workout Duration (Personal):"
				android:gravity="left"
				android:textColor="#000000" />
			
			<TextView android:layout_weight="1"
				android:id ="@+id/workoutPersonalDuration"
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:gravity="left"
				android:textColor="#000000" />
			
		</LinearLayout>
		
		<LinearLayout android:layout_weight="0"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			
			<TextView android:layout_weight="0"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Number of Sets Completed:"
				android:gravity="left"
				android:textColor="#000000" />
			
			<TextView android:layout_weight="1"
				android:id ="@+id/workoutSets"
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:gravity="left"
				android:textColor="#000000" />
			
		</LinearLayout>
		
		<LinearLayout android:layout_weight="0"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			
			<TextView android:layout_weight="0"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Number of People:"
				android:gravity="left"
				android:textColor="#000000" />
			
			<TextView android:layout_weight="1"
				android:id ="@+id/workoutPeople"
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:gravity="left"
				android:textColor="#000000" />
			
		</LinearLayout>
		
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0"
			android:text="Completed Exercises"
			android:background="#CCC"
			android:textColor="#000"
			android:gravity="center" />
			
		<ListView
			android:id="@+id/exerciseLV"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:background="#E5E5E5" />

	</LinearLayout>

	<!-- Fill the rest of screen and place buttons at the bottom of screen -->

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="55dp" android:background="#555555"
		android:gravity="bottom" android:orientation="horizontal"
		android:layout_weight="0">

		<Button android:id="@+id/dwBack" android:text="Back"
			android:layout_width="wrap_content" android:layout_height="50dp"
			android:layout_weight="1" />


	</LinearLayout>
</LinearLayout>

