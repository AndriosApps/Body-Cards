<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#FFFFFF"
	android:orientation="vertical"
	android:gravity="top">
		
	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#E5E5E5"
		android:orientation="vertical"
		android:gravity="center"
		android:layout_weight="1">
		<LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout2" android:layout_weight="0" android:layout_height="50dip" android:background="@drawable/actionbar" android:gravity="center|left">
			<TextView android:gravity="center" android:layout_height="wrap_content" android:layout_weight="0" android:id="@+id/textTitle" android:text="Set Workout Details" android:textSize="22dp" android:layout_width="wrap_content"></TextView>
		</LinearLayout>
 
		 <LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="#E5E5E5"
			android:orientation="horizontal"
			android:gravity="center"
			android:layout_weight="0">
			
			<TextView android:id="@+id/newQuickWorkoutActivityNumberGuestsLBL" 
				android:text="Guest Users" 
				android:textColor="#000"
				android:layout_weight="0"
				android:layout_width="90dp" 
				android:layout_height="wrap_content"
				android:gravity="left" />
				
			<EditText android:id="@+id/newQuickWorkoutActivityNumberGuestsTXT" 
				android:text="0" 
				android:layout_weight="1"
				android:layout_width="0dp"
				android:textColor="#F00"
				android:textSize="15dp"
				android:background="#E5E5E5"
				android:layout_height="wrap_content" 
				android:inputType="phone"
				android:gravity="center"
				android:selectAllOnFocus="true" />
	
		</LinearLayout>
		 <LinearLayout 
		 	android:layout_width="fill_parent" 
		 	android:layout_height="wrap_content" 
		 	android:id="@+id/linearLayout1" android:gravity="center">
		    <TextView android:id="@+id/RadioLBL"
		         	android:text="Deck Size" 
		         	android:layout_width="90dp" 
		        	android:layout_height="wrap_content" 
		        	android:textColor="#000" 
		        	android:layout_weight="0" 
		        	android:gravity="center|left">
		        </TextView>
		     <RadioGroup android:id="@+id/newDeckOfCardsRadioGrp" 
		     	android:orientation="horizontal" 
		     	android:layout_width="0dp" 
		     	android:layout_height="wrap_content" 
		     	android:layout_weight="1" 
		     	android:gravity="center">

		         <RadioButton 
		         	android:text="1/4" 
		         	android:layout_height="wrap_content" 
		         	android:textColor="#000" 
		         	android:id="@+id/newDeckOfCardsQuarterRDO" 
		         	android:layout_weight="1" 
		         	android:layout_width="wrap_content">
		         </RadioButton>
		         <RadioButton 
		         	android:text="1/2" 
		         	android:checked="true" 
		         	android:layout_height="wrap_content" 
		         	android:textColor="#000" 
		         	android:id="@+id/newDeckOfCardsHalfRDO" 
		         	android:layout_weight="1" 
		         	android:layout_width="wrap_content">
		         </RadioButton>
		         <RadioButton 
		         	android:text="Full" 
		         	android:id="@+id/newDeckOfCardsFullRDO" 
		         	android:layout_width="wrap_content" 
		         	android:layout_height="wrap_content"
		         	android:textColor="#000" 
		         	android:checked="true">
		         </RadioButton>
		     </RadioGroup>
		 </LinearLayout>
		 <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout3" android:layout_weight="0" android:background="@drawable/actionbar" android:gravity="center|left" android:layout_height="30dip">
		     <TextView android:gravity="center" android:layout_height="wrap_content" android:layout_weight="0" android:id="@+id/profileChooserTitle" android:text="Choose Profiles for Workout" android:textSize="18dp"  android:layout_width="wrap_content"></TextView>
		 </LinearLayout>
			
		 <ListView android:id="@+id/newQuickWorkoutActivityAvailableProfilesListView"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:choiceMode="multipleChoice"
			android:gravity="top"
			android:layout_weight="1" />
		 <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout4" android:layout_weight="0" android:background="@drawable/actionbar" android:gravity="center|left" android:layout_height="30dip">
		     <TextView android:gravity="center" android:layout_height="wrap_content" android:layout_weight="0" android:id="@+id/profileChooserTitle" android:text="Selected Profiles" android:textSize="18dp"  android:layout_width="wrap_content"></TextView>
		 </LinearLayout>
			
		 <ListView android:id="@+id/newQuickWorkoutActivityChosenProfilesListView"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:choiceMode="multipleChoice"
			android:gravity="top"
			android:layout_weight="1" />
				
		
	</LinearLayout>


<!-- Fill the rest of screen and place buttons at the bottom of screen -->
	
	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="55dp"
		android:gravity="bottom"
		android:orientation="horizontal"
		android:layout_weight="0" android:background="@drawable/actionbar">
			
		<Button android:id="@+id/newQuickWorkoutActivityResetBTN" 
			android:text=" "
			android:layout_height="50dp"
			android:background="@drawable/refresh" android:layout_width="50dip" android:layout_weight="0"/>
		<LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout5" android:layout_height="fill_parent" android:layout_weight="1"></LinearLayout>
		
		<Button android:id="@+id/newQuickWorkoutActivityDoneBTN" 
			android:layout_width="wrap_content"
			android:layout_height="50dp"
			android:text=" "
			android:background="@drawable/next" android:layout_weight="0"/>

	</LinearLayout>
	
</LinearLayout>
