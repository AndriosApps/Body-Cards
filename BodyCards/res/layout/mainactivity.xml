<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="#FFFFFF"
	android:gravity="center"
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/res/com.andrios.bodycards">
	
	<com.google.ads.AdView 
		xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
		android:id="@+id/homeAdView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        ads:adUnitId="a14dca3fe4ea15f"
        ads:adSize="BANNER"
        android:layout_weight="0" />	
        
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1" >

	</LinearLayout>
	
	<ImageView android:id="@+id/imageView1" 
			android:layout_width="wrap_content" 
			android:layout_height="300dp" 
			android:src="@drawable/mainscreen">
	</ImageView>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_weight="0"
		android:orientation="vertical"
		android:gravity="center">
		
		<Button android:id="@+id/mainActivityDeckOfCardsWorkoutBTN" 
			android:text="Deck of Cards" 
			android:layout_width="250dp" 
			android:layout_height="50dp"
			android:gravity="center" />
			
		<Button android:id="@+id/mainActivityRandomWorkoutBTN" 
			android:text="Random Workout" 
			android:layout_width="250dp" 
			android:layout_height="50dp" />
			
		<Button android:id="@+id/mainActivityCustomWorkoutBTN" 
			android:text="Custom Workout" 
			android:layout_width="250dp" 
			android:layout_height="50dp" />
				
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1" />
	
	<!-- Fill the rest of screen and place buttons at the bottom of screen -->
		
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="55dp"
		android:layout_weight="0"
		android:orientation="horizontal"
		android:gravity="bottom"
		android:background="#555555">
		
		<Button android:id="@+id/mainActivityViewProfilesBTN" 
			android:text="View Profiles"
			android:layout_width="90dp" 
			android:layout_height="50dp"
			android:layout_weight="1"
			android:padding="5dp" />
			
		<Button android:id="@+id/mainActivityHelpBTN" 
			android:text="Help"
			android:layout_width="90dp" 
			android:layout_height="50dp"
			android:layout_weight="1"
			android:padding="5dp" />	
			
		<Button android:id="@+id/mainActivityQuitBTN"
			android:text="Quit" 
			android:layout_width="90dp" 
			android:layout_height="50dp"
			android:layout_weight="1"
			android:padding="5dp" />
		
	</LinearLayout>

</LinearLayout>
