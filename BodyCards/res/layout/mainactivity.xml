<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="#FFFFFF"
	android:gravity="center_vertical"
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1" >

	</LinearLayout>
	
	<ImageView android:id="@+id/imageView1" 
			android:layout_width="fill_parent" 
			android:layout_height="300dip" 
			android:src="@drawable/mainscreen">
	</ImageView>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_weight="0"
		android:orientation="vertical"
		android:gravity="center">
		
		<Button android:id="@+id/mainActivityDeckOfCardsWorkoutBTN" 
			android:text="Deck of Cards" 
			android:layout_width="250dip" 
			android:layout_height="40dip"
			android:gravity="center" />
			
		<Button android:id="@+id/mainActivityRandomWorkoutBTN" 
			android:text="Random Workout" 
			android:layout_width="250dip" 
			android:layout_height="40dip" />
			
		<Button android:id="@+id/mainActivityCustomWorkoutBTN" 
			android:text="Custom Workout" 
			android:layout_width="250dip" 
			android:layout_height="40dip" />
				
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1" />
	
	<!-- Fill the rest of screen and place buttons at the bottom of screen -->
		
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="55dip"
		android:layout_weight="0"
		android:orientation="horizontal"
		android:gravity="bottom"
		android:background="#555555">
		
		<Button android:id="@+id/mainActivityViewProfilesBTN" 
			android:text="View Profiles"
			android:layout_width="90dip" 
			android:layout_height="50dip"
			android:layout_weight="1"
			android:padding="5dip" />
			
		<Button android:id="@+id/mainActivityHelpBTN" 
			android:text="Help"
			android:layout_width="90dip" 
			android:layout_height="50dip"
			android:layout_weight="1"
			android:padding="5dip" />	
			
		<Button android:id="@+id/mainActivityQuitBTN"
			android:text="Quit" 
			android:layout_width="90dip" 
			android:layout_height="50dip"
			android:layout_weight="1"
			android:padding="5dip" />
		
	</LinearLayout>

</LinearLayout>
