<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#FFFFFF"
  android:gravity="center"
  android:orientation="vertical">
  
	  
	  <TextView android:id="@+id/exerciseTitle"
	  	android:text="Exercise Workout Card"
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:textColor="#000"
	  	android:gravity="center"
	  	android:background="#CCC"
	  	android:layout_weight="0"
	  	android:textSize="18px" />
	  
  
  <LinearLayout
	  android:id="@+id/newExNameRow"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:background="#FFF"
	  android:gravity="center"
	  android:layout_weight="0"
	  android:orientation="horizontal">
  
  	  <ImageView android:id="@+id/newExImg"
  	  	android:src="@drawable/nopic"
	  	android:gravity="center"
	  	android:layout_width="100px"
	  	android:layout_height="100px" />
	  	
	  <TextView android:id="@+id/newExName"
	  	android:layout_width="fill_parent"
	  	android:layout_height="fill_parent"
	  	android:textSize="19px"
	  	android:gravity="center"
	  	android:textColor="#000"
	  	android:background="#FFF" />
 
  </LinearLayout>
  
  <TextView android:id="@+id/newExDescLabel"
  	android:text="Description"
  	android:gravity="center"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:background="#CCC"
  	android:textSize="15px"
  	android:layout_weight="0"
  	android:textColor="#000" />
  
  
  <ScrollView
  	android:layout_width="fill_parent"
  	android:layout_height="0px"
  	android:layout_weight="1"
  	>	  	
	  <TextView android:id="@+id/newExDesc"
	  	android:layout_width="fill_parent"
	  	android:layout_height="fill_parent"
	  	android:layout_weight="1"
	  	android:textColor="#000"
	  	android:background="#E5E5E5"
	  	android:gravity="top"
	  	android:singleLine="false"
	  	android:scrollHorizontally="false" />
 	</ScrollView>


  
  <!-- Fill the rest of screen and place buttons at the bottom of screen -->
		
 
  
  <LinearLayout
    android:layout_width="fill_parent"
  	android:layout_height="55px"
  	android:background="#555555"
 	android:gravity="bottom"
 	android:layout_weight="0"
  	android:orientation="horizontal">
  	
  <Button android:id="@+id/deBack"
  	android:text="Back"
  	android:layout_width="wrap_content"
  	android:layout_height="50px"
  	android:layout_weight="1" />
  	
  <Button android:id="@+id/deUpdate"
  	android:text="Update"
  	android:layout_width="wrap_content"
  	android:layout_height="50px"
  	android:layout_weight="1" />
  	
  	
  </LinearLayout>
</LinearLayout>
