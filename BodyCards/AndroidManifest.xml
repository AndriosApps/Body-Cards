      <uses-permission android:name="android.permission.WAKE_LOCK" />
      
    <application android:icon="@drawable/icn" android:label="Body Cards">
  
        <activity android:name="MainActivity"
                  android:label="Body Cards"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.google.ads.AdActivity"
              android:configChanges="keyboard|keyboardHidden|orientation"/>
       
        <activity android:name="DeckOfCardsWorkoutActivity" android:screenOrientation="portrait" />
        <activity android:name="NewDeckOfCardsWorkoutActivity" android:screenOrientation="portrait" />
